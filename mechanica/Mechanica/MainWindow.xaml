<Window x:Class="Mechanica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mechanica"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="input_distance_inp" HorizontalAlignment="Left" Height="23" Margin="33,72,0,0" TextWrapping="Wrap" Text="Distance" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="input_distance_lbl" HorizontalAlignment="Left" Margin="33,56,0,0" TextWrapping="Wrap" Text="Desired Distance:" VerticalAlignment="Top"/>
        <Button x:Name="begin_test_btn" Content="Test Now" HorizontalAlignment="Left" Margin="158,72,0,0" VerticalAlignment="Top" Width="75" Click="begin_test_btn_Click"/>
        <TextBlock x:Name="lvdt_data_rd" HorizontalAlignment="Left" Margin="272,72,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="105"/>
        <TextBlock x:Name="loadcell_data_rd" HorizontalAlignment="Left" Margin="397,72,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="99"/>
        <TextBlock x:Name="lvdt_data_lbl" HorizontalAlignment="Left" Margin="272,56,0,0" TextWrapping="Wrap" Text="LVDT Data:" VerticalAlignment="Top"/>
        <TextBox x:Name="loadcell_data_lbl" HorizontalAlignment="Left" Margin="397,54,0,0" TextWrapping="Wrap" Text="Load Cell Data:" VerticalAlignment="Top" BorderBrush="{x:Null}"/>
        <Button x:Name="manual_ctrl_btn" Content="Manual Control" HorizontalAlignment="Left" Margin="46,272,0,0" VerticalAlignment="Top" Width="116" Click="manual_ctrl_btn_Click"/>
        <Button x:Name="up_control_btn" Content="Up" HorizontalAlignment="Left" Margin="204,221,0,0" VerticalAlignment="Top" Width="75" Height="22" Click="up_control_btn_Click" Visibility="Hidden"/>
        <Button x:Name="down_control_btn" Content="Down" HorizontalAlignment="Left" Margin="204,257,0,0" VerticalAlignment="Top" Width="75" Click="down_control_btn_Click" Visibility="Hidden"/>

    </Grid>
</Window>
